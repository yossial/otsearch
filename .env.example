# ─── Database ─────────────────────────────────────────────────────
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/ot-connect?retryWrites=true&w=majority

# ─── Auth ──────────────────────────────────────────────────────────
NEXTAUTH_SECRET=<generate: node -e "require('crypto').randomBytes(32).toString('base64url')|console.log">
NEXTAUTH_URL=http://localhost:3000

# ─── AWS (S3 file uploads — use ot-connect-app IAM user credentials) ──
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=ot-connect-dev-uploads
S3_REGION=eu-west-1

# ─── Payments ──────────────────────────────────────────────────────
PAYPLUS_API_KEY=

# ─── Maps ──────────────────────────────────────────────────────────
GOOGLE_MAPS_API_KEY=

# ─── Email ─────────────────────────────────────────────────────────
RESEND_API_KEY=
EMAIL_FROM=noreply@ot-connect.co.il
